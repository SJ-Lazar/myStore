    @* ======= Lastest Products ======= *@

    <section id="products" class="products py-5">
        <div class="container">
            <!--Section Title-->
            <div class="row">
                <div class="col-10 mx-auto col-sm-6 text-center">
                    <h1 class="text-captialize product-title font-weight-bold text-uppercase text-dark">
                        Latest Products
                    </h1>
                    <hr class="font-weight-bolder" style="" />
                </div>
            </div>
            <!--End of Section Title-->
            <!--Products items-->
            <div class="row prodiuct-items" id="product-items">
                <!--Single Item-->
                @foreach (var product in latestProducts)
                {
                    <div class="col-10 col-sm-6 col-lg-4 mx-auto my-3">
                        <div class="card single-item">
                            <!--Card Image-->
                            <div class="img-container">
                                <a asp-action="Details" asp-route-id="@product.ProductId">
                                    <img style="width:300px; height:250px" src="@Html.DisplayFor(modelItem => product.ImagePath)"
                                         class="card-img-top product-img" alt="">
                                </a>
                            </div>
                            <!--End of Card Image-->
                            <!--Card Details-->
                            <div class="card-body">
                                <div class="card-text d-flex justify-content-between text-captialize">
                                    <h5 id="item-name"> @Html.DisplayFor(modelItem => product.ProductName)</h5>
                                    <span>
                                        <i class="zar-icon font-weight-bold">R</i>
                                        @Html.DisplayFor(modelItem => product.Price)
                                    </span>
                                </div>
                                <!--Hidden Card Details-->
                                <div>
                                    <h5 class="SerialNumber" hidden>@Html.DisplayFor(modelItem => product.SerialNumber)</h5>
                                    <h5 class="barcode" hidden>@Html.DisplayFor(modelItem => product.BarCode)</h5>
                                </div>
                                <!--End Of Hidden Card Details-->
                                <!--Card Buttons and Links-->
                                <div class="card-btns d-flex justify-content-end">
                                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-success px-3 mx-1">
                                        <i class="fa fa-plus"></i>
                                    </a>

                                    <a href="#" class="btn btn-danger px-3 mx-1">
                                        <i class="fa fa-heart"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@product.ProductId"
                                       class="btn btn-warning px-3 mx-1"><i class="fa fa-eye"></i></a>
                                </div>
                                <!--End of Buttons and Links-->
                            </div>
                        </div>
                    </div>
                }
                <!--End of Single Item-->
            </div>
            <!--End of Products items-->
        </div>

    </section>

