@model myStore.Models.ProductSpec

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProductSpec</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductId" class="cotrol-label">Choose a Product:</label>
                <br />
                <select asp-for="ProductId" class="control-label">
                    @foreach (Product p in Model.Products)
                    {
                        <option value="@p.ProductId">@p.ProductName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Choose a Category:</label>
                <br />
                <select asp-for="CategoryId" class="control-label">
                    @foreach (Category c in Model.Categories)
                    {
                        <option value="@c.CategoryId">@c.CategoryName</option>
                    }
                </select>
            </div>

         

          

            <div class="form-group">
                <label asp-for="TagId" class="control-label">Choose a Tag:</label>
                <br />
                <select asp-for="TagId" name="TagId" class="control-label">
                    @foreach (Tag t in Model.Tags)
                    {
                        <option value="@t.TagId">@t.TagName</option>
                    }
                </select>
            </div> 

            <div class="form-group">
                <label asp-for="BrandId" class="control-label">Choose a Brand:</label>
                <br />
                <select asp-for="BrandId" name="TagId" class="control-label">
                    @foreach (Brand b in Model.Brands)
                    {
                        <option value="@b.BrandId">@b.BrandName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
